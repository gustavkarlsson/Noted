<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="se.gustavkarlsson.noted">

    <application
        android:name=".NotedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="se.gustavkarlsson.noted.gui.activities.NotesActivity"
                  android:label="@string/notes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="se.gustavkarlsson.noted.gui.activities.EditNoteActivity"
                  android:label="@string/edit_note">
        </activity>
    </application>

</manifest>
